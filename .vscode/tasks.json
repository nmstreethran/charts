{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "convert-notebooks",
            "type": "shell",
            "command": "source .venv/bin/activate && jupyter nbconvert --to script --ClearOutputPreprocessor.enabled=True docs/python/*.ipynb && rm -rf charts/python/* && mv docs/python/*.py charts/python",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "black-isort",
            "type": "shell",
            "command": "source .venv/bin/activate && black -l 79 **/**/*.py docs/python/*.ipynb && isort **/**/*.py",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "sanitise-notebooks",
            "type": "shell",
            "command": "source .venv/bin/activate && jupyter nbconvert --sanitize-html --to notebook --inplace **/**/*.ipynb",
            "problemMatcher": [],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "ruff",
            "type": "shell",
            "command": "source .venv/bin/activate && ruff check --select I --fix && ruff format",
            "problemMatcher": [],
            "group": {
                "kind": "test"
            }
        },
        {
            "label": "prune-remote",
            "type": "shell",
            "command": "git fetch --prune",
            "problemMatcher": []
        },
        {
            "label": "prune-local",
            "type": "shell",
            "command": "git prune --verbose",
            "problemMatcher": []
        }
    ]
}
